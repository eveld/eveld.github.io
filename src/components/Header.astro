---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/"><img src="/images/eveldcorp.svg" /></a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="mailto:mail@erikveld.com">Contact</HeaderLink>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 20px 30px 0 30px;
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 img {
		height: 32px;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 20px;
	}
	
	nav a {
		border-bottom: 4px solid transparent;
		color: var(--foreground);
		text-decoration: none;
	}

	nav .internal-links a {
		margin: 0 0 0 20px;
	}
	
	nav a.active {
		color: var(--accent);
		text-decoration: none;
	}

	:global(.dark) nav a {
		color: var(--foreground-dark);
	}

	:global(.dark) nav a.active {
		color: var(--accent-dark);
	}
</style>
