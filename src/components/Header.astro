---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<a href="/" title={SITE_TITLE}>
			<svg viewBox="0 0 610.24 622.52">
				<g><polygon points="200.11 242.42 385.43 92.94 310.47 0 0 250.43 300.14 622.52 610.24 372.38 534.88 278.95 349.92 428.15 312.56 381.82 483.52 243.92 407.23 149.34 236.26 287.24 200.11 242.42 200.11 242.42"/></g>
			</svg>
		</a>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="mailto:mail@erikveld.com">Contact</HeaderLink>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 20px 30px 0 30px;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav a {
		text-decoration: none;
	}

	nav a.active {
		color: var(--orange);
	}

	:global(.dark) nav a.active {
		color: var(--yellow);
	}

	svg {
		fill: var(--dark-gray);
		height: 32px;
	}

	:global(.dark) svg {
		fill: var(--purple);
	}

	nav .internal-links {
		display: flex;
		gap: 20px;
	}
</style>
